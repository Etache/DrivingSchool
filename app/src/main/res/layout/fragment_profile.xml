<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.profile.ProfileFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:scaleType="centerCrop"
            android:contentDescription="profile photo" />

    </com.google.android.material.card.MaterialCardView>


    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_photo_profile"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/tvSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:text="@string/second_name"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/cardView"
        app:layout_constraintTop_toTopOf="@id/cardView" />


    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/tvSurname"
        app:layout_constraintTop_toBottomOf="@+id/tvSurname" />

    <TextView
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp"
        android:text="Номер телефона"
        android:textColor="#8E8E8E"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/rectangle_bg_profile"
        android:paddingHorizontal="16dp"
        android:paddingVertical="11dp"
        android:text="+996 999 999"
        android:textColor="#585858"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/number" />

    <TextView
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp"
        android:text="Группа"
        android:textColor="#8E8E8E"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/tvNumber" />

    <TextView
        android:id="@+id/tvGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/rectangle_bg_profile"
        android:paddingHorizontal="16dp"
        android:paddingVertical="11dp"
        android:text="№ 4"
        android:textColor="#585858"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/group" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F8F8F8"
        android:paddingHorizontal="8dp"
        android:paddingVertical="5dp"
        android:text="Сменить пароль"
        android:textAlignment="textStart"
        android:textColor="#5883CB"
        android:textSize="16sp"
        app:cornerRadius="5dp"
        app:icon="@drawable/ic_key_square_profile"
        app:iconTint="#365CA7"
        app:layout_constraintTop_toBottomOf="@id/tvGroup" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F8F8F8"
        android:paddingHorizontal="8dp"
        android:paddingVertical="5dp"
        android:text="Выйти"
        android:textAlignment="textStart"
        android:textColor="#585858"
        android:textSize="16sp"
        app:cornerRadius="5dp"
        app:icon="@drawable/ic_exit_profile"
        app:iconTint="#E94057"
        app:layout_constraintTop_toBottomOf="@id/btnChangePassword" />


</androidx.constraintlayout.widget.ConstraintLayout>