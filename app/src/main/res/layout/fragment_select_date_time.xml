<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="24dp"
    android:orientation="vertical"
    tools:context=".ui.fragments.enroll.instructorFragment.calendar.EnrollInstructorFragment">

    <TextView
        android:id="@+id/tv_timetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Выберите дату"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:background="@drawable/calendar_shape"
        android:layout_width="match_parent"
        android:layout_height="326dp"
        android:layout_marginTop="28dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_month_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:fontFamily="@font/roboto_medium"
                android:text="Август 2023"
                android:paddingStart="18dp"
                android:textAlignment="textStart"
                android:textColor="@color/violet"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_previous_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/chevron_backward"
                android:scaleY="0.55"
                android:scaleX="0.55"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_next_month"
                android:layout_width="0dp"
                android:layout_marginStart="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/chevron_forward"
                android:scaleY="0.55"
                android:scaleX="0.55"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/calendar_P"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/calendar_B"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/calendar_C"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/calendar_CH"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/calendar_P"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/calendar_C"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/calendar_B"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:textAlignment="center"
                />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calendar_recycler"
            tools:listitem="@layout/item_calendar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/select_time"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:flexDirection="row"
        app:flexWrap="wrap">

        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_8"
            android:clickable="true"
            android:focusable="true" />
        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_9"
            android:clickable="true"
            android:focusable="true" />
        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_10"
            android:clickable="true"
            android:focusable="true" />
        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_11"
            android:clickable="true"
            android:focusable="true" />
        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_12"
            android:clickable="true"
            android:focusable="true" />
        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_13"
            android:clickable="true"
            android:focusable="true" />
        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_14"
            android:clickable="true"
            android:focusable="true" />
        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_15"
            android:clickable="true"
            android:focusable="true" />
        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_16"
            android:clickable="true"
            android:focusable="true" />
        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_17"
            android:clickable="true"
            android:focusable="true" />
        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_18"
            android:clickable="true"
            android:focusable="true" />

    </com.google.android.flexbox.FlexboxLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_active_bg"
        android:enabled="true"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/confirm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>