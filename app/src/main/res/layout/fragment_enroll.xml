<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="28dp"
    tools:context=".ui.fragments.enroll.confirmEnroll.EnrollFragment">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Имя инструктора"
        android:textColor="#8E8E8E"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_instructor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/et_confirm_enroll_background"
        android:hint="@string/choose_instructor"
        android:paddingHorizontal="16dp"
        android:paddingVertical="11dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_name"/>

    <TextView
        android:id="@+id/tv_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Дата и время"
        android:textColor="#8E8E8E"
        app:layout_constraintTop_toBottomOf="@id/et_instructor_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/et_confirm_enroll_background"
        android:hint="@string/choose_date"
        android:paddingHorizontal="16dp"
        android:paddingVertical="11dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_date_time"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm_enroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#5883CB"
        android:text="@string/enroll_to_a_lesson"
        android:textSize="16dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>