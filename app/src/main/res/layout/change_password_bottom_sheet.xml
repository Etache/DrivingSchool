<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp"
    android:background="@color/white"
    app:layout_constraintCircleRadius="8dp">

    <View
        android:layout_width="65dp"
        android:layout_height="3dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:background="@drawable/bottom_sheet_line" />

    <TextView
        android:id="@+id/tvOldPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:paddingTop="12dp"
        android:text="Старый пароль"
        android:textColor="@color/gray"
        android:layout_marginTop="12dp"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edtOldPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_et_change_password"
        android:hint="Введите старый пароль"
        android:paddingHorizontal="16dp"
        android:paddingVertical="11dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:paddingTop="12dp"
        android:text="Новый пароль"
        android:textColor="#8E8E8E"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edtNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_et_change_password"
        android:hint="Новый пароль"
        android:paddingHorizontal="16dp"
        android:paddingVertical="11dp"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tvConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:paddingTop="12dp"
        android:text="Подтвердите пароль"
        android:textColor="#8E8E8E"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edtConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_et_change_password"
        android:hint="Подтвердите пароль"
        android:paddingHorizontal="16dp"
        android:paddingVertical="11dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:paddingTop="12dp">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#F8F8F8"
            android:text="Отмена"
            android:textColor="#545454"
            android:textSize="14sp"
            app:cornerRadius="5dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSavePassword"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:backgroundTint="#F8F8F8"
            android:text="Сохранить"
            android:textColor="#545454"
            app:cornerRadius="5dp" />

    </LinearLayout>


</LinearLayout>