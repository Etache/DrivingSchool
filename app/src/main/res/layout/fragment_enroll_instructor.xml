<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        tools:context=".ui.fragments.enroll.instructorFragment.calendar.EnrollInstructorFragment">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="24dp"
        android:background="@color/super_light_gray"
        app:mcv_showOtherDates="none"
        app:mcv_selectionColor="@color/blue"
        app:mcv_arrowColor="@color/violet"
        app:mcv_weekDayTextAppearance="@style/CustomWeekDayStyle"

        />

    <TextView
        android:id="@+id/tv_select_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toBottomOf="@id/calendarView"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/select_time"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flex_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/tv_select_time"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="24dp"
        app:flexDirection="row"
        app:flexWrap="wrap">

        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_8"
            android:clickable="true"
            android:focusable="true" />
        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_9"
            android:clickable="true"
            android:focusable="true" />
        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_10"
            android:clickable="true"
            android:focusable="true" />
        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_11"
            android:clickable="true"
            android:focusable="true" />
        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_13"
            android:clickable="true"
            android:focusable="true" />
        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_14"
            android:clickable="true"
            android:focusable="true" />
        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_15"
            android:clickable="true"
            android:focusable="true" />
        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_16"
            android:clickable="true"
            android:focusable="true" />
        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_17"
            android:clickable="true"
            android:focusable="true" />
        <include layout="@layout/item_enroll_instructor_time"
            android:id="@+id/time_18"
            android:clickable="true"
            android:focusable="true" />
    </com.google.android.flexbox.FlexboxLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_check_timetable"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flex_time"
        android:layout_marginBottom="24dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_active_bg"
        android:enabled="true"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/check_calendar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>